---
export interface Props {
  tags: string;
  title: string;
  excerpt: string;
  date: string;
  url: string;
}

const { tags, title, excerpt, date, url } = Astro.props;
console.log({ url });
---

<a href={url}>
  <div class="blog-post">
    <div class="image">
      <img
        src="https://luismanzanero.com/static/304b33f4d596c59c07458e50374185bc/aed41/e0e2fb1760aca2deadde1258a3ac6ec3.jpg"
      />
    </div>
    <div class="blog-info">
      <div class="category">#<span>{tags}</span></div>
      <div class="blog-title"><h2>{title}</h2></div>
      <div class="exerpt">{excerpt}</div>
      <div class="author">Luis Manzanero</div>
      <div class="published-date">{date}</div>
    </div>
  </div>
</a>
