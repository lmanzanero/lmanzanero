---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/NavBar/Header.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    date?: string;
    image?: string;
  };
}

const {
  content: { title, description, date, image },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={`${title}`} description={description} image={image} />
  </head>

  <body>
    <Header />
    <main>
      <article>
        <div id="banner">
          {
            (
              <img
                style="width: 100%; height: 70vh; object-fit: cover;"
                src={image}
                alt=""
              />
            )
          }
        </div>
        <h1 class="title">{title}</h1>
        {date && <time>{date}</time>}
        <hr />
        <div class="markdown">
          <div class="markdown-container">
            <slot />
          </div>
        </div>
      </article>
    </main>
    <!-- <Footer /> -->
  </body>
</html>
